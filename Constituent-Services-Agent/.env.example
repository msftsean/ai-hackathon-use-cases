# Constituent Services Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Feature Flags
# =============================================================================

# Set to 'true' for offline development without Azure services
USE_MOCK_SERVICES=true

# Enable debug mode (set to 'false' in production)
DEBUG=true

# =============================================================================
# Azure AI Project (Required for production)
# =============================================================================

# Connection string from Azure AI Foundry project
AZURE_AI_PROJECT_CONNECTION_STRING=

# =============================================================================
# Azure OpenAI (Required for production)
# =============================================================================

# Your Azure OpenAI endpoint
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com

# Azure OpenAI API key
AZURE_OPENAI_KEY=

# Deployment name (e.g., gpt-4, gpt-4-turbo)
AZURE_OPENAI_DEPLOYMENT=gpt-4

# =============================================================================
# Azure Translator (Required for multi-language support)
# =============================================================================

# Azure Translator API key
AZURE_TRANSLATOR_KEY=

# Azure Translator endpoint (default works for most regions)
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# Azure region for Translator service
AZURE_TRANSLATOR_REGION=eastus

# =============================================================================
# Azure Cosmos DB (Required for conversation history and audit logs)
# =============================================================================

# Cosmos DB endpoint URL
COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com

# Cosmos DB access key
COSMOS_KEY=

# Database name
COSMOS_DATABASE=constituent-agent

# =============================================================================
# Agent Configuration
# =============================================================================

# Minimum confidence score before offering human escalation (0.0-1.0)
CONFIDENCE_THRESHOLD=0.5

# Maximum citations to include in response
MAX_CITATIONS=5

# Response timeout in seconds
RESPONSE_TIMEOUT_SECONDS=30

# Default language (ISO 639-1 code)
DEFAULT_LANGUAGE=en

# =============================================================================
# Session Management
# =============================================================================

# Session timeout in seconds (default: 30 minutes)
SESSION_TTL_SECONDS=1800

# Days to retain conversation data before purging
CONVERSATION_RETENTION_DAYS=30

# =============================================================================
# Server Configuration
# =============================================================================

# Server host (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Server port
PORT=5000

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
