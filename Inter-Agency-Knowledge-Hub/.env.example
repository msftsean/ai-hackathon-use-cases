# Inter-Agency Knowledge Hub Configuration
# Copy this file to .env and fill in your values

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_PREFIX=agency-docs

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Microsoft Entra ID (Azure AD) Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Application Settings
USE_MOCK_SERVICES=true
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=change-this-in-production

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database Configuration
DATABASE_PATH=./data/audit.db

# Cache Settings
PERMISSION_CACHE_TTL_MINUTES=15
SEARCH_CACHE_TTL_SECONDS=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cross-Reference Settings
CROSS_REF_MIN_CONFIDENCE=0.7
CROSS_REF_MAX_RESULTS=10

# Review Settings
REVIEW_CRITERIA_PATH=./assets/review_criteria.json
