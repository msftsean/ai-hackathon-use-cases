# Emergency Response Agent Configuration
# Copy this file to .env and fill in your values

# OpenWeatherMap API (optional - has mock fallback)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Azure OpenAI (optional for basic demo)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure AI Search (optional - for historical incidents)
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your_search_key_here
AZURE_SEARCH_INDEX=historical-incidents

# Application settings
FLASK_PORT=5002
USE_MOCK_SERVICES=true
LOG_LEVEL=INFO
